apiVersion: v1
kind: Secret
metadata:
  name: concatly-secrets
type: Opaque
data:
  # Base64 encode your OpenAI API key and put it here (FALLBACK ONLY)
  # This is only used if AWS Secrets Manager is not available
  # echo -n "your-openai-api-key" | base64
  openai-api-key: YOUR_BASE64_ENCODED_OPENAI_KEY_HERE

---
# For AWS Secrets Manager (RECOMMENDED FOR PRODUCTION):
# 
# 1. Create OpenAI secret:
#    aws secretsmanager create-secret \
#      --name "concatly/openai" \
#      --description "OpenAI API credentials for Concatly" \
#      --secret-string '{"api_key":"sk-your-actual-openai-key"}'
#
# 2. Create Confluence secret:
#    aws secretsmanager create-secret \
#      --name "concatly/confluence" \
#      --description "Confluence API credentials for Concatly" \
#      --secret-string '{
#        "base_url":"https://your-domain.atlassian.net",
#        "username":"your-email@domain.com",
#        "api_token":"your-confluence-api-token"
#      }'
#
# 3. Ensure your EKS nodes have IAM permissions to read these secrets:
#    - secretsmanager:GetSecretValue
#    - secretsmanager:DescribeSecret
#
# The application will automatically detect AWS environment and use 
# Secrets Manager when available, falling back to Kubernetes secrets
# only if AWS credentials are not configured.
